{
    "functions": {
        "api/*.php": { "runtime": "vercel-php@0.6.0" },
        "index.php": { "runtime": "vercel-php@0.6.0" },
        "login.php": { "runtime": "vercel-php@0.6.0" },
        "register.php": { "runtime": "vercel-php@0.6.0" }
    },
    "routes": [
        { "src": "/public/(.*)", "dest": "/public/$1" },
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/(.*)", "dest": "/index.php" }
    ]
}
